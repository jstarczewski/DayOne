<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bookCardView"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="#EEEEEE"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/titel"
            android:visibility="visible"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:text="Day 1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_view_author_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/author"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:visibility="visible"
            android:text="Tap to go to specific notes"
            android:layout_below="@+id/titel"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="normal"
            android:layout_marginLeft="@dimen/card_view_text_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/info"
            android:visibility="visible"
            android:text="basic info here!"
            android:layout_below="@+id/author"
            android:layout_centerHorizontal="true" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/editTextAuthor"
            android:text="Three lines to save titel, author, and some info"
            android:layout_below="@id/titel"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/card_view_text_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:inputType="textMultiLine"
            android:typeface="monospace"
            android:textColor="#000000"
            android:text=""
            android:layout_below="@+id/editTextAuthor"
            android:id="@+id/editTextNote"
            android:layout_marginLeft="@dimen/card_view_text_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_drop_down_light_blue_700_48dp"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="6dp"
            android:layout_alignParentEnd="true"
            android:visibility="visible"
            android:id="@+id/imageButton" />


    </RelativeLayout>


</android.support.v7.widget.CardView>